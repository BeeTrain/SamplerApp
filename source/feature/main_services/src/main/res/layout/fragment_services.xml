<?xml version="1.0" encoding="utf-8"?>
<ru.chernakov.sampler.widget.container.ConstraintContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ru.chernakov.sampler.widget.appbar.Toolbar
        android:id="@+id/services_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Services" />

    <ru.chernakov.sampler.widget.text.TextView
        android:id="@+id/services_swiper_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start|center_vertical"
        android:padding="@dimen/keyline_2"
        android:text="@string/title_item_swiper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services_toolbar"
        app:textType="Subtitle1" />

</ru.chernakov.sampler.widget.container.ConstraintContainer>